@page
@model Gram.Web.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Customers";
}

<h1><a asp-page="Create" class="far fa-plus-square nav-link text-dark"></a>Customers</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].Nationality)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entity)
        {
            <tr>
                <td>
                    <div>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="far fa-edit nav-link text-dark"></a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="far fa-file-alt nav-link text-dark"></a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="far fa-trash-alt nav-link text-dark"></a>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
            </tr>
        }
    </tbody>
</table>
