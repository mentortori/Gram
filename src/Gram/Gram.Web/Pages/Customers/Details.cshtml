@page
@model Gram.Web.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1><a asp-page="./Index" title="Back" class="fas fa-chevron-left nav-link text-dark"></a><a asp-page="./Edit" asp-route-id="@Model.Entity.Id" title="Edit" class="far fa-edit nav-link text-dark"></a>@Model.Entity.FirstName @Model.Entity.LastName</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Nationality)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Nationality)
        </dd>
    </dl>
</div>
<hr />
<fieldset>
    <legend>Attendance</legend>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Entity.AttendedEvents.SingleOrDefault().EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity.AttendedEvents.SingleOrDefault().AttendanceStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity.AttendedEvents.SingleOrDefault().StatusDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity.AttendedEvents.SingleOrDefault().Remarks)
            </th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Entity.AttendedEvents.Any())
        {
            @foreach (var item in Model.Entity.AttendedEvents)
            {
                <tr>
                    <td>
                        <a asp-page="/Events/Details" asp-route-id="@item.EventId" title="Details" class="ga far fa-file-alt">&nbsp;@item.EventName</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AttendanceStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No attendance data present</td>
            </tr>
        }
        </tbody>
    </table>
</fieldset>
