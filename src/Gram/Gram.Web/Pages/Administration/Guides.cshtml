@page
@model Gram.Web.Pages.Administration.GuidesModel

@{
    ViewData["Title"] = "Guides";
    ViewData["ActivePage"] = ManageNavPages.Guides;
}

<h1><a asp-page="Create" title="Create" class="far fa-plus-square nav-link text-dark"></a>Guides</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="fit"></th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].Nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].EventsCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].IsActive)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entity)
        {
            <tr>
                <td class="fit">
                    <div>
                        <a asp-page="./Details" asp-route-id="@item.Id" title="Details" class="ga far fa-file-alt"></a>
                        <a asp-page="./Edit" asp-route-id="@item.Id" title="Edit" class="ga far fa-edit"></a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" title="Delete" class="ga far fa-trash-alt"></a>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventsCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
            </tr>
        }
    </tbody>
</table>
