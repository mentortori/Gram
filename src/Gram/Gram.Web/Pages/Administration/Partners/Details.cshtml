@page
@model Gram.Web.Pages.Administration.Partners.Details

@{
    ViewData["Title"] = "Details";
    ViewData["ActivePage"] = ManageNavPages.Partners;
}

<h1>
    <a asp-page="./Index" title="Back" class="ga fas fa-chevron-left"></a>
    <a asp-page="./Edit" asp-route-id="@Model.Entity.Id" title="Edit" class="ga far fa-edit"></a>
    <a asp-page="./Delete" asp-route-id="@Model.Entity.Id" title="Delete" class="ga far fa-trash-alt"></a>
    @Model.Entity.Name
</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Entity.ContactDetails.Mobile)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Entity.ContactDetails.Mobile)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Entity.ContactDetails.Email)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Entity.ContactDetails.Email)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Entity.ContactDetails.Facebook)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Entity.ContactDetails.Facebook)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Entity.ContactDetails.Instagram)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Entity.ContactDetails.Instagram)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Entity.ContactDetails.Twitter)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Entity.ContactDetails.Twitter)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Entity.ContactDetails.Web)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Entity.ContactDetails.Web)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Entity.Events)
        </dt>
        <dd class="col-sm-8">
            @foreach (var item in Model.Entity.Events)
            {
                <div><a asp-page="/Events/Details" asp-route-id="@item.Id" title="Details" class="ga far fa-file-alt">&nbsp;@item.Name</a></div>
            }
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Entity.IsActive)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Entity.IsActive)
        </dd>
    </dl>
</div>
