@page
@model Gram.Web.Pages.Administration.DetailsGuide

@{
    ViewData["Title"] = "Details";
    ViewData["ActivePage"] = ManageNavPages.Guides;
}

    <h1><a asp-page="./Guides" title="Back" class="fas fa-chevron-left nav-link text-dark"></a>@Model.Entity.Name</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Nationality)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.Nationality)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Events)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Entity.Events)
            {
                <div><a asp-page="/Events/Details" asp-route-id="@item.Id" title="Details" class="ga far fa-file-alt">&nbsp;@item.Name</a></div>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.IsActive)
        </dd>
    </dl>
</div>
