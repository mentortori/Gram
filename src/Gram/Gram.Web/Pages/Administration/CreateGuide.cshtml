@page
@model Gram.Web.Pages.Administration.CreateGuideModel

@{
    ViewData["Title"] = "Create";
    ViewData["ActivePage"] = ManageNavPages.Guides;
}

<h1>
    <a asp-page="./Guides" title="Back" class="ga fas fa-chevron-left"></a>
    Create guide
</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Entity.PersonId" class="control-label"></label>
                <select asp-for="Entity.PersonId" class="form-control" asp-items="Model.PeopleList"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Entity.IsActive" />
                    @Html.DisplayNameFor(model => model.Entity.IsActive)
                </label>
            </div>
            <button type="submit" title="Create" class="btn btn-primary">
                <span class="far fa-save"></span>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
