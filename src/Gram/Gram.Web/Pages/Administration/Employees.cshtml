@page
@model Gram.Web.Pages.Administration.EmployeesModel

@{
    ViewData["Title"] = "Employees";
    ViewData["ActivePage"] = ManageNavPages.Employees;
}

<h1><a asp-page="Create" title="Create" class="far fa-plus-square nav-link text-dark"></a>Employees</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="fit"></th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].DateOfEmployment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Entity[0].EmploymentExpiryDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entity)
        {
            <tr>
                <td class="fit">
                    <div>
                        <a asp-page="./Details" asp-route-id="@item.Id" title="Details" class="ga far fa-file-alt"></a>
                        <a asp-page="./Edit" asp-route-id="@item.Id" title="Edit" class="ga far fa-edit"></a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" title="Delete" class="ga far fa-trash-alt"></a>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfEmployment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmploymentExpiryDate)
                </td>
            </tr>
        }
    </tbody>
</table>
