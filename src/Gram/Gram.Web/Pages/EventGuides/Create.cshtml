@page
@model Gram.Web.Pages.EventGuides.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1><a asp-page="/Events/Details" asp-route-id="@Model.EventId" title="Back" class="fas fa-chevron-left nav-link text-dark"></a>Add guide</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Entity.GuideId" class="control-label"></label>
                <select asp-for="Entity.GuideId" class="form-control" asp-items="Model.GuidesList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
