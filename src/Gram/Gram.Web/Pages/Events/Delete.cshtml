@page
@model Gram.Web.Pages.Events.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1><a asp-page="./Index" class="fas fa-chevron-left nav-link text-dark"></a>Delete event</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.EventName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.EventStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.EventStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.EventDescription)
        </dt>
        <dd class="col-sm-10">
            <span style="white-space: pre-line">
                @Html.DisplayFor(model => model.Entity.EventDescription)
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.EventDate)
        </dd>
    </dl>

    @if (Model.Entity.IsDeletable)
    {
        <form method="post">
            <input type="hidden" asp-for="Entity.Id" />
            <input type="hidden" asp-for="Entity.RowVersion" />
            <button type="submit" value="Delete" class="btn btn-danger">
                <span class="far fa-trash-alt"></span>
            </button>
        </form>
    }
    else
    {
        <h6 class="text-danger">Entity cannot be deleted since it is referenced in other entities</h6>
        <div>
            <button type="submit" value="Delete" class="btn btn-danger" disabled>
                <span class="far fa-trash-alt"></span>
            </button>
        </div>
    }
</div>
