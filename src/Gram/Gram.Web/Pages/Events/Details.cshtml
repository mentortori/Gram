@page
@model Gram.Web.Pages.Events.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
}

<h1>
    <a asp-page="./Index" title="Back" class="ga fas fa-chevron-left"></a>
    <a asp-page="./Edit" asp-route-id="@Model.Entity.Id" title="Edit" class="ga far fa-edit"></a>
    <a asp-page="./Delete" asp-route-id="@Model.Entity.Id" title="Delete" class="ga far fa-trash-alt"></a>
    @Html.DisplayNameFor(model => model.Entity.EventName): @Model.Entity.EventName
</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.EventStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.EventStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entity.EventDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.Guides)
        </dt>
        <dd class="col-sm-10">
            <a asp-page="/EventGuides/Create" asp-route-EventId="@Model.Entity.Id" title="Create" class="ga far fa-plus-square">&nbsp;Add guide</a>
            @foreach (var item in Model.Entity.Guides)
            {
                <form asp-page="/EventGuides/Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="@item.Id" name="id" />
                    <input type="hidden" asp-for="@item.RowVersion" name="RowVersion" />
                    <input type="hidden" asp-for="@Model.Entity.Id" name="EventId" />
                    <button type="submit" title="Delete" class="link-button">
                        <span class="ga far fa-trash-alt"></span>
                    </button>
                    @item.Name
                </form>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entity.EventDescription)
        </dt>
        <dd class="col-sm-10">
            <span style="white-space: pre-line">
                @Html.DisplayFor(model => model.Entity.EventDescription)
            </span>
        </dd>
    </dl>
</div>
<hr />
<fieldset>
    <legend>
        <a asp-page="/Attendees/Create" asp-route-EventId="@Model.Entity.Id" class="ga far fa-plus-square"></a>
        Attendance
    </legend>
    <vc:event-attendees id="@Model.Entity.Id"></vc:event-attendees>
</fieldset>
