@page
@model Gram.Web.Pages.EventPartners.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>
    <a asp-page="/Events/Details" asp-route-id="@Model.EventId" title="Back" class="ga fas fa-chevron-left"></a>
    Add partner
</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Entity.PartnerId" class="control-label"></label>
                <select asp-for="Entity.PartnerId" class="form-control" asp-items="Model.ParetnersList"></select>
            </div>
            <button type="submit" title="Create" class="btn btn-primary">
                <span class="far fa-save"></span>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
